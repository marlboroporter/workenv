#! /usr/bin/env zsh

DOT_DIR=.vscode

CMD=$0

usage(){
echo "
$(basename $CMD) [gcc|clang...] 
add $DOT_DIR to current dir 
"
}

#ENV=${1:-gcc} # defaultto gcc 
ENV=${1:-pegasus} # defaultto gcc 


add_dot_vscode_cpp(){
    START_DIR=$PWD
    rm -rf $DOT_DIR 
    DIR=dot_vscode_cpp_$ENV
    echo $DIR
    e vscode # cd 
    cp -r etc/$DIR $START_DIR/$DOT_DIR  
}

if [[ "$1" == "--help" ]]; then
    usage
else
    add_dot_vscode_cpp $1
fi

