#! /usr/bin/env zsh
C=$0
usage(){
echo "
$(basename $C): 
- Purpose: create a cpp proj with vscode support and simple makefile. 
- Usage:
    - make run
    - cd $D; code .; click cpp file; add break points; run debug 
"
}
create_proj_at_call_site(){

    CALL_DIR=$PWD
    D=${1:-helloworld}
    d1=$CALL_DIR/$D

    # avoid rm current existing
    if [ -d $d1 ]; then 
        echo "$d1 exists"  
        exit 1
    fi
    #rm  -rf $d1
    mkdir -p $d1

    e vscode # cd vscode    
    cp etc/cpp_ex_2/* $d1
    mv  $d1/gitignore $d1/.gitignore
    echo "$D" >> $d1/.gitignore 
    echo "# $D" > $d1/README.md
    cp -r etc/vscode_profiles/cpp2 $d1/.vscode 
    cd $CALL_DIR
}


if [[ "$1" == "--help" ]]; then
    usage
else
    create_proj_at_call_site "$@"
fi

