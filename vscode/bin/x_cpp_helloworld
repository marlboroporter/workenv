#! /usr/bin/env zsh
C=$0
usage(){
echo "
$(basename $C): 
- Purpose: create a cpp proj with vscode support and simple makefile. 
- Usage:
    - make run
    - cd $D; code .; click cpp file; add break points; run debug 
"
}


create_simple_cpp_vscode_helloworld_proj(){
    DIR_OLD=$PWD
    e vscode # cd vscode    
    D=$1
    D=${D:-helloworld}
    d=~/dev/vscode/$D
    rm -rf $d
    rm  -f $D
    mkdir -p $d 
    cp etc/cppsample/makefile $d  
    cp etc/cppsample/helloworld.cpp $d
    cp etc/cppsample/gitignore $d/.gitignore
    echo "$N">>$d/.gitignore 
    cp -r etc/cppsample/vscode_settings $d/.vscode 
    cd $DIR_OLD
    ln -sf $d $D 
}

if [[ "$1" == "--help" ]]; then
    usage
else
    create_simple_cpp_vscode_helloworld_proj "$@"
fi

