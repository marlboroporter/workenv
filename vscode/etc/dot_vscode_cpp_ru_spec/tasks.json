{
    "tasks": [
        {
            "type": "cppbuild",
            //"label": "C/C++: clang++ build active file",
            "label": "mybuildtask",
            "command": "/usr/bin/clang++",
            "args": [
                "-I${workspaceFolder}/../../include/dsalgo/common",
                "-I${workspaceFolder}/../../include/dsalgo/test",
                "-g",
                //"${command:cpptools.activeConfigName:PX}",
                //"${env:PX}*.cpp",
                //"${inputs:P}*.cpp",
                //"${workspaceFolder}/P1SolutionImpl.cpp",
                //"${workspaceFolder}/P1Tests.cpp",
                //"${workspaceFolder}/P1TestsMain.cpp",
                //"${file}",
                "${workspaceFolder}/*.cpp",
                "-o",       
                "a.out",
                "--std=c++17"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "inputs": [
            {
              "id": "P",
              "type": "command",
              "command": "extension.commandvariable.file.content",
              "args": {
                "fileName": "${workspaceFolder}/dsalgo_config.json",
                //"json": "content.server1.port",
                "json": "content.PX",
                "default": "P1",
                "keyRemember": "PX"
              }
            }
    ],
    "version": "2.0.0"
}
