{
    "tasks": [
        {
            "type": "cppbuild",
            //"label": "C/C++: clang++ build active file",
            "label": "mybuildtask",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-I../../include/dsalgo/common",
                "-I../../include/dsalgo/test",
                "-I../../include/dsalgo/spec",
                "-L../../lib",
                "-ldsalgoP2impl",
                "-ldsalgocommontest",
                "-g",
                "*.cpp",
                //"${file}",
                "-o",       
                "${fileDirname}/${fileBasenameNoExtension}",
                "--std=c++17"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
