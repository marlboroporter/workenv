#! /usr/bin/env bash 
##! /usr/bin/env zsh
usage(){ 
echo "Usage: $(basename $0) [func=info] [dir=.] 
  - use within ~/.w
  - WPKGMGR=noop|brew change default behavior 
"
exit 1 
}
[[ ! $PWD =~ "$HOME/.w" ]] && usage 
FUNC=${1:-info}
if [[ "$2" == "" ]]; then
    DIR=$PWD
else
    DIR=$HOME/.w/app/$2
fi
( 
    cd $DIR  
    source ~/.w/app/lib/basesetup.sh  
    [[ -f ./setup.sh ]] && source ./setup.sh 
    #echo "$wapp $pkgmgr"
    #eval "$FUNC" 
    case $FUNC in 
        install) 
            ;& 
        uninstall) 
            ;&
        reinstall) 
            ;&
        config) 
            ;& 
        info)  
            ;&
        pkgmgr)  
            f="call_$FUNC"
            $f
            ;;  
        *) 
            winfo "$FUNC"
            $FUNC    
            ;;  
    esac
)
