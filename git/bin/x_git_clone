x_clone_github(){
  repo=$1
  d=$(echo "$repo"\
      | sed -e 's/https:\/\/github.com\///'\
      | sed -e 's/git@github.com://'\
      )
  D=~/dev/$d
  reponame=$(basename $d)
  reponame_wo_dot_git=$(echo "$reponame" | sed -e 's/\.git$//')

  if ! [[ -d $D ]] && ! [[ -L $reponame_wo_dot_git ]]; then
    mkdir -p $D
    git clone $repo $D
    ln -s $D $reponame_wo_dot_git 
  else
    "repo $D  and/or link $PWD/$reponame_wo_dot_git exist!" 
  fi 

}

x_clone_github "$@"
