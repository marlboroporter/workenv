x_clone_github(){
  repo=$1
  d=$(echo "$repo"\
      | sed -e 's/https:\/\/github.com\///'\
      | sed -e 's/git@github.com://'\
      )
  D=~/dev/$d
  b=$(basename $d)

  rm $b; rm -rf $D 
  if ! [[ -d $D ]] && ! [[ -L $b ]]; then
    mkdir -p $D
    git clone $repo $D
    ln -s $D . 
  fi

}

x_clone_github "$@"
